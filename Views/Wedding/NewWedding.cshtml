@{
    ViewData["Title"] = "New Wedding";
}

@model weddingplanner.Models.Wedding
<div class="row">
    <h1 class="eight columns">Plan Your Wedding</h1>
    <a href="/Dashboard">Dashboard</a>
    <a href="/Logout">Logout</a>
</div>

<div class="five columns">
    <form asp-action="AddWedding" asp-controller="Wedding" method="Post">
        <input type="hidden" asp-for="UserId" value="@ViewBag.UserId">
        <span asp-validation-for="Groom"></span>
        <label asp-for="Groom"></label><input asp-for="Groom">
        <span asp-validation-for="Bride"></span>
        <label asp-for="Bride"></label><input asp-for="Bride">
        <span asp-validation-for="WeddingDate"></span>
        <label asp-for="WeddingDate"></label><input asp-for="WeddingDate">
        <span asp-validation-for="Address"></span>
        <label asp-for="Address"></label><input asp-for="Address"><br>
        <input type="submit" value="Create">
    </form>
</div>